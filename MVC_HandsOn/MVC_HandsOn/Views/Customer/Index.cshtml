@model IEnumerable<MVC_HandsOn.Models.customer> 
    
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
@* this is wow*@
<table class="table table-bordered">
    <tr><th>Customers</th>
    <th>Discount Type</th>
    </tr>

    @if (Model.Count()==0)
    {
        <tr>
            <td colspan="2">
                <text>no one rented this movie before</text>
            </td>
        </tr>
    }

    else
    {

        foreach (var customer in Model)
        {
            <tr>
                <td>
                   @Html.ActionLink(@customer.name,"Edit", new { id = @customer.id })
                </td>
                <td>
                    @customer.MemberShipType.name
                </td>
            </tr>
        }
    }
    </table>